<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="android:itemTextAppearance">@style/MenuTheme</item>
    </style>

    <style name="MenuTheme" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:textColor">@color/darkWhite</item>
    </style>

    <style name="Spinner" parent="android:Widget.Holo.ProgressBar">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">400dp</item>
    </style>

    <style name="AllCapsSubHeading" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="subTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Infos" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="MainDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lightBlack</item>
    </style>

</resources>
