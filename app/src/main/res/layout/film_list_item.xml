<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">

    <TextView
        android:id="@+id/title_film"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/episode_id_film"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/title_film"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/director_textview"
        style="@style/Infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/director"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_film" />

    <TextView
        android:id="@+id/director_film"
        style="@style/Infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/director_textview"
        app:layout_constraintTop_toBottomOf="@id/episode_id_film" />

    <TextView
        android:id="@+id/producer_textview"
        style="@style/Infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/producer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/director_textview" />

    <TextView
        android:id="@+id/producer_film"
        style="@style/Infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/producer_textview"
        app:layout_constraintTop_toBottomOf="@id/director_film" />

    <View
        android:id="@+id/divider_film"
        style="@style/Divider"
        android:layout_marginTop="4dp"
        android:background="@color/lightBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/producer_textview" />
</android.support.constraint.ConstraintLayout>